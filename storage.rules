rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }
    
    function isValidSize() {
      // Max 10MB
      return request.resource.size < 10 * 1024 * 1024;
    }
    
    function isValidImageSize() {
      return isImage() && isValidSize();
    }
    
    // Campaign images
    match /campaigns/{userId}/{fileName} {
      // Anyone can read campaign images
      allow read: if true;
      
      // Only authenticated users can upload to their own folder
      allow create: if isAuthenticated() && 
                      isOwner(userId) && 
                      isValidImageSize();
      
      // Only the owner can update their images
      allow update: if isAuthenticated() && 
                      isOwner(userId) && 
                      isValidImageSize();
      
      // Only the owner can delete their images
      allow delete: if isAuthenticated() && isOwner(userId);
    }
    
    // User profile images
    match /users/{userId}/profile/{allPaths=**} {
      // Anyone can read profile images (for public profiles)
      allow read: if true;
      
      // Only the user can upload to their own profile folder
      allow create, update: if isAuthenticated() && 
                              isOwner(userId) && 
                              isValidImageSize();
      
      // Only the user can delete their own profile images
      allow delete: if isAuthenticated() && isOwner(userId);
    }
    
    // Profile images (simplified path: profile-images/{userId}.webp)
    match /profile-images/{fileName} {
      // Anyone can read profile images (public profiles)
      allow read: if true;
      
      // Extract userId from filename (format: {userId}.webp)
      // Only the user can upload/update their own profile image
      // Max 1MB file size for profile images
      allow create, update: if isAuthenticated() && 
                              isImage() &&
                              request.resource.size < 1 * 1024 * 1024 &&
                              fileName.matches('^' + request.auth.uid + '\\.webp$');
      
      // Only the user can delete their own profile image
      allow delete: if isAuthenticated() && 
                      fileName.matches('^' + request.auth.uid + '\\.webp$');
    }
    
    // User campaign images
    match /users/{userId}/campaigns/{allPaths=**} {
      // Anyone can read campaign images
      allow read: if true;
      
      // Only the user can upload to their own campaigns folder
      allow create, update: if isAuthenticated() && 
                              isOwner(userId) && 
                              isValidImageSize();
      
      // Only the user can delete their own campaign images
      allow delete: if isAuthenticated() && isOwner(userId);
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
